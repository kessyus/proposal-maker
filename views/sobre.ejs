  </head>

  <body>
    <!-- HEADER -->
    <header>
      <div class="logo">
        <img src="img/logo.svg" alt="" />
      </div>
      <div class="menu">
        <a href="javascript:void(0);" onclick="showMenu()"
          ><i class="fa fa-bars" aria-hidden="true"></i
        ></a>
      </div>
    </header>

    <!-- CONTENT -->
    <main>
