<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/styleTable.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <title>Proposal Maker</title>
  </head>

  <body>
    <!-- HEADER -->
    <header>
      <div class="logo">
        <i class="fa fa-briefcase" aria-hidden="true"></i> Proposal Maker
      </div>
      <div class="menu">
        <a href="#"><i class="fa fa-bars" aria-hidden="true"></i></a>
      </div>
    </header>

    <!-- CONTENT -->
    <main>
      <div class="menu_lateral">
        <a href="/" class="btnMenu"
          ><i class="fa fa-home" aria-hidden="true"></i
        ></a>
        <a href="formulario" class="btnMenu"
          ><i class="fa fa-briefcase" aria-hidden="true"></i
        ></a>
        <a href="precos" class="btnMenu" style="border-right: 3px solid #2088ea"
          ><i class="fa fa-money" aria-hidden="true"></i
        ></a>
        <a href="sobre" class="btnMenu"
          ><i class="fa fa-info-circle" aria-hidden="true"></i
        ></a>
        <a href="#" class="btnMenu"
          ><i class="fa fa-user-circle-o" aria-hidden="true"></i
        ></a>
        <a href="#" class="btnMenu"
          ><i class="fa fa-sign-out" aria-hidden="true"></i
        ></a>
      </div>
      <div class="content">
        <form action="/precosBBD" method="POST">

          <!-- TABELA BBD -->
          <section>
            <div class="slice">
              <div class="title"><h1>Tabela de Pre√ßos - BBD</h1></div>
              <table>
                <tr>
                  <th>Largura de Banda</th>
                  <th>R$ Mensal</th>
                </tr>
                <% priceBBD.map((item) => { %> 
                  <tr 
                    <% if (parseInt(item.id) % 2 === 0) {%>
                      style="background-color: #fafafa">
                    <% } else { %>
                      style="" >
                    <% } %>
                    <td><%= item.bandwidth %></td>
                    <td>
                      <input
                        id="<%= item.id %>"
                        type="number"
                        min="1"
                        step="0.01"
                        name="mrc"
                        value="<%= parseFloat(item.mrc).toFixed(2) %>"
                      />
                    </td>
                  </tr>
                  <input type="hidden" name="id" value="<%= item.id %>">
                  <input type="hidden" name="bandwidth" value="<%= item.bandwidth %>">
                <% }) %>
              </table>
            </div>
          </section>

          <div class="botao">
            <button type="submit" class="btn">Salva Valores</button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
