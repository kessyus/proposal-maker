<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/style.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <title>Proposal Maker</title>
  </head>

  <body>
    <!-- HEADER -->
    <header>
      <div class="logo">
        <img src="img/logo.svg" alt="" />
      </div>
      <div class="menu">
        <a href="javascript:void(0);" onclick="showMenu()"><i class="fa fa-bars" aria-hidden="true"></i></a>
      </div>
    </header>

    <!-- CONTENT -->
    <main>
      <div id="sidebar" class="menu_lateral">
        <a href="/" class="btnMenu"
          ><i class="fa fa-home" aria-hidden="true"></i
        ></a>
        <a href="formulario" class="btnMenu"
          ><i class="fa fa-briefcase" aria-hidden="true"></i
        ></a>
        <a href="precos" class="btnMenu" style="border-right: 3px solid #2088ea"
          ><i class="fa fa-money" aria-hidden="true"></i
        ></a>
        <a href="sobre" class="btnMenu"
          ><i class="fa fa-info-circle" aria-hidden="true"></i
        ></a>
      </div>
      <div class="content">
        <form action="/precosBBD" method="POST">

          <!-- TABELA BBD -->
          <section>
            <div class="slice">
              <div class="title"><h1>Tabela de Preços - BBD</h1></div>
              <div class="report-table">
                <table>
                  <tr>
                    <th>Banda</th>
                    <th>R$ Mensal</th>
                  </tr>
                  <% priceBBD.map((item) => { %> 
                    <tr 
                      <% if (parseInt(item.id) % 2 === 0) {%>
                        style="background-color: #fafafa">
                      <% } else { %>
                        style="" >
                      <% } %>
                      <td><%= item.bandwidth %></td>
                      <td>
                        <input
                        id="<%= item.id %>"
                        type="number"
                        class="edit-price"
                        min="1"
                        step="0.01"
                        name="mrc"
                        value="<%= parseFloat(item.mrc).toFixed(2) %>"
                      />
                      </td>
                    </tr>
                    <input type="hidden" name="id" value="<%= item.id %>">
                    <input type="hidden" name="bandwidth" value="<%= item.bandwidth %>">
                  <% }) %>
                </table>
              </div>
            </div>
          </section>

          <div class="botao">
            <button type="submit" class="btn">Salvar</button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
<script>
  // função para mostrar o menu lateral quando a tela for de celular
  function showMenu() {
    var x = document.getElementById("sidebar");
    if (x.style.display === "flex") {
      x.style.display = "none";
    } else {
      x.style.display = "flex";
    }
  }
</script>